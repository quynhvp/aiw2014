<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="description" content="" >
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Single - Daily News </title>
  <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
  <link rel="stylesheet" type="text/css" href="css/font-awesome.min.css">
  <link rel="stylesheet" type="text/css" href="css/style.css">

</head>

<body>

<section id="ccr-main-section">
<div class="container">


<section id="ccr-left-section" class="col-md-8">

  <div class="current-page">
    <a href="index.html"><i class="fa fa-home"></i> <i class="fa fa-angle-double-right"></i></a> <a href="blog.html">Tin Tức <i class="fa fa-angle-double-right"></i></a> Mới Nhất
  </div> <!-- / .current-page -->

  <article id="ccr-article">
    <h1><%= @APost.title %> </h1>

    <div class="article-like-comment-date">
      Được đăng bởi <a href="#author"> <b>Bích Ngọc</b></a> on <time datetime="2014-02-17"><%= @APost.created_at %></time> in <a href="#category">Category</a>

    </div> <!-- /.article-like-comment-date -->


    <img src="<%= image_path(@APost.photo) %>" alt="1st Image" height="638px" width="764px">
    <p>
      <%= @APost.description %>
    </p>
    <img src="<%= image_path('ava.jpg') %>" alt="2nd Image">
    <p>

    <%= @APost.content %>
    </p>
    <div class="article-tags">
      Tag: <a href="#tag1">Tiền Xu</a>, <a href="#tag2">Cổ Đại</a>, <a href="#tag3">Hi Lạp</a>
    </div>

  </article> <!-- /#ccr-single-post -->


  <section class="bottom-border"></section> <!-- /#bottom-border -->

  <section id="ccr-commnet">
    <div class="ccr-gallery-ttile">
      <span class="bottom"></span>
      <p>Bình Luận</p>
    </div> <!-- .ccr-gallery-ttile -->

    <ol class="commentlist">
      <li  class="comment">
        <article>
          <div class="comment-authore">
            <img src="<%= image_path('21.jpg') %>" alt="Avatar">
            <a href="#">Nghĩa</a>
          </div>
          <div class="comment-content">
            Quả thật quá hoàn hảo. Những đồng xu vĩ đại của nhân loại
          </div>

          <div class="comment-meta"> 15 Tháng 11; 2014</div>
        </article>
    </ol> <!-- /.commentlist -->



  </section> <!-- /#ccr-commnet -->



  <section class="bottom-border"></section> <!-- /#bottom-border -->





</section><!-- /.col-md-8 / #ccr-left-section -->



  <aside id="ccr-right-section" class="col-md-4 ccr-home">
    <section id="social-buttons">
      <ul>
        <li>
          <a href="#" class="google-plus"><i class="fa fa-google-plus"></i></a>

          <p><span class="bubble"></span><span class="count">202</span> Like</p>
        </li>
        <li>
          <a href="#"  class="linkedin"><i class="fa fa-linkedin"></i></a>
          <p><span class="bubble"></span><span class="count">202</span> Like</p>
        </li>
        <li>
          <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
          <p><span class="bubble"></span><span class="count">202</span> Follow</p>
        </li>
        <li>
          <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
          <p><span class="bubble"></span><span class="count">202</span> Like</p>
        </li>
      </ul>

    </section>  <!-- /#social-buttons -->

    <section id="sidebar-popular-post">
      <div class="ccr-gallery-ttile">
        <span></span>
        <p><strong>Sản phẩm bán chạy</strong></p>
      </div> <!-- .ccr-gallery-ttile -->
      <ul>
        <li>
          <img src="<%= image_path('sports-thumb-10.jpg') %>" alt="Avatar">
       Bộ 5 con thú 1972
          <div class="date-like-comment">
            <span class="date"><time datetime="2014-02-17">333.000 VNĐ</time></span>
          </div>
        </li>
        <li>
          <img src="<%= image_path('thumbnail-small-7.jpg') %>"  alt="Avatar">
         Thiệp 50đ Ngựa 1972 (năm Giáp Ngọ 2014)
          <div class="date-like-comment">
            <span class="date"><time datetime="2014-02-17">80.000 VNĐ</time></span>
          </div>
        </li>
        <li>
          <img src="<%= image_path('sports-thumb-5.jpg') %>" alt="Avatar">
          Bộ tiền cotton 11 tờ
          <div class="date-like-comment">
            <span class="date"><time datetime="2014-02-17">444.000 VNĐ</time></span>
          </div>
        </li>
        <li>
          <img src="<%= image_path('thumbnail-small-2.jpg') %>"  alt="Avatar">
         2 usd 1976
          <div class="date-like-comment">
            <span class="date"><time datetime="2014-02-17">299.000 VNĐ</time></span>
          </div>
        </li>
        <li>
          <img src="<%= image_path('thumbnail-small-5.jpg') %>" alt="Avatar">
          Bộ 4 tờ kỉ niệm mệnh giá lớn của Mỹ
          <div class="date-like-comment">
            <span class="date"><time datetime="2014-02-17">140.000 VNĐ</time></span>
          </div>
        </li>
      </ul>

    </section> <!-- /#sidebar-popular-post -->




    <section id="ccr-sidebar-add-place">
      <div class="sidebar-add-place">
        <img src="<%= image_path('370.jpg') %>" alt="image" >
      </div>
    </section> <!-- /#ccr-sidebar-add-place -->


    <section id="ccr-find-on-fb">
      <div class="find-fb-title">
        <span><i class="fa fa-facebook"></i></span> Find us on Facebook
      </div> <!-- /.find-fb-title -->
      <div class="find-on-fb-body">

        <div class="fb-like-box" data-href="https://www.facebook.com/nghia.lin.con" data-colorscheme="light" data-show-faces="true" data-header="false" data-stream="false" data-show-border="false"></div>

      </div> <!-- /.find-on-fb-body -->
    </section> <!-- /#ccr-find-on-fb -->


  </aside><!-- / .col-md-4  / #ccr-right-section -->


</div><!-- /.container -->
</section><!-- / #ccr-main-section -->






<script src="js/jquery-1.9.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/custom.js"></script>


</body>
</html>